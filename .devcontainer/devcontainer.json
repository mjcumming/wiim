{
  "name": "WiiM - Home Assistant Dev",
  "image": "ghcr.io/home-assistant/devcontainer:2024.12",
  "postCreateCommand": "scripts/setup_ha_dev.sh",
  "forwardPorts": [8123],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.testing.pytestEnabled": true,
        "files.eol": "\n"
      }
    }
  },
  "workspaceFolder": "/workspaces/wiim",
  "mounts": [
    "source=${localWorkspaceFolder}/custom_components,target=/workspaces/core/config/custom_components,type=bind"
  ],
  "runArgs": ["--init", "--privileged"],
  "remoteUser": "vscode"
}